<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Biting Tongue -->
    <GeneDef ParentName="BEWH_BeneficialMutationBase">
        <defName>BEWH_NurgleBitingTongue</defName>
        <label>mutation: Biting tongue</label>
        <description>The pawn's tongue has mutated to be thick and cylindrical with a maw of biting teeth, much like that of a Great Unclean One.</description>
        <iconPath>UI/Icons/Genes/BitingTongue</iconPath>
        <displayOrderInCategory>340</displayOrderInCategory>
        <customEffectDescriptions>
            <li>Gives carriers of this gene the ability to attack using their tongue.</li>
        </customEffectDescriptions>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Nurgle</backgroundPathXenogenes>
                <hediffsToBodyParts>
                    <li>
                        <hediff>BEWH_NurgleBitingTongueAttack</hediff>
                        <bodyparts>
                            <li>Jaw</li>
                        </bodyparts>
                    </li>
                    <li>
                        <hediff>BEWH_BitingTongue</hediff>
                        <bodyparts>
                            <li>Jaw</li>
                        </bodyparts>
                    </li>
                </hediffsToBodyParts>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Nurgle</li>
                </givenBy>
                <selectionWeight>0.6</selectionWeight>
                <isBeneficial>True</isBeneficial>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Nurgle</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Tzeentch</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- Bile Spew -->
    <GeneDef ParentName="BEWH_BeneficialMutationBase">
        <defName>BEWH_NurgleBileSpew</defName>
        <label>mutation: Bile spew</label>
        <description>The pawn has mutated in such a way that allows them to spew forth a grotesque amount of vomit. Anyone caught in this barrage of vomit, instantly starts vomiting too.</description>
        <iconPath>UI/Icons/Genes/BileSpew</iconPath>
        <displayOrderInCategory>340</displayOrderInCategory>
        <abilities>
            <li>BEWH_BileSpewBlast</li>
        </abilities>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Nurgle</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Nurgle</li>
                </givenBy>
                <selectionWeight>0.6</selectionWeight>
                <isBeneficial>True</isBeneficial>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Nurgle</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Tzeentch</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>

</Defs>