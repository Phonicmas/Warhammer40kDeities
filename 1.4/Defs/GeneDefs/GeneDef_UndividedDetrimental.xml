        </capMods>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Undivided</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Undivided</li>
                    <li>Khorne</li>
                    <li>Tzeentch</li>
                    <li>Nurgle</li>
                    <li>Slaanesh</li>
                </givenBy>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Undivided</god>
                        <opinion>1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>


    <!--===== Tentacle on Whole Body =====-->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_MutationTentacles</defName>
        <label>mutation: Tentacles</label>
        <description>The pawn has mutated useless tentacles on their body, which always get in the way.</description>
        <iconPath>UI/Icons/Genes/TentaclesWholeBody</iconPath>
        <displayOrderInCategory>140</displayOrderInCategory>
        <capMods>
            <li>
                <capacity>Manipulation</capacity>
                <offset>-0.3</offset>
            </li>
        </capMods>
        <statOffsets>
            <MoveSpeed>-0.1</MoveSpeed>
        </statOffsets>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Undivided-Tzeentch</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Undivided</li>
                    <li>Tzeentch</li>
                </givenBy>
                <selectionWeight>1.2</selectionWeight>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Tzeentch</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Undivided</god>
                        <opinion>1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
        <graphicData>
            <graphicPath>Things/Pawn/Humanlike/BodyAttachments/Tentacles/TentaclesWholeBody</graphicPath>
            <drawOffsetNorth>(0, 0.19, 0)</drawOffsetNorth>
			<drawOffsetSouth>(0, 0, 0)</drawOffsetSouth>
			<drawOffsetEast>(0, 0, 0)</drawOffsetEast>
            <drawScale>1.7  </drawScale>
			<drawLoc>Tailbone</drawLoc>
            <colorType>Skin</colorType>
        </graphicData>
    </GeneDef>

    <!--===== Rotting Flesh =====-->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_MutationRottingFlesh</defName>
        <label>mutation: Rotting flesh</label>
        <description>The pawns body has mutated, every now and then, rancid meat sloughs from their body, exposing newly rotting areas beneath.</description>
        <iconPath>UI/Icons/Genes/RottingBody</iconPath>
        <displayOrderInCategory>140</displayOrderInCategory>
        <statFactors>
            <IncomingDamageFactor>1.9</IncomingDamageFactor>
        </statFactors>
        <statOffsets>
            <ArmorRating_Blunt>-0.3</ArmorRating_Blunt>
            <ArmorRating_Sharp>-0.3</ArmorRating_Sharp>
            <ArmorRating_Heat>-0.3</ArmorRating_Heat>
            <PawnBeauty>-2</PawnBeauty>
            <SocialImpact>-0.5</SocialImpact>
            <NegotiationAbility>-0.5</NegotiationAbility>
        </statOffsets>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Undivided-Nurgle</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Undivided</li>
                    <li>Nurgle</li>
                </givenBy>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Nurgle</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Undivided</god>
                        <opinion>1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
