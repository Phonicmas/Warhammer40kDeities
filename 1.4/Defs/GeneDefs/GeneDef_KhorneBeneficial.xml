<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Bronze Skin -->
    <GeneDef ParentName="BEWH_BeneficialMutationBase">
        <defName>BEWH_KhorneBronzeSkin</defName>
        <label>mutation: Bronze skin</label>
        <description>The pawns body has mutated to be gilded in bronze, giving them extra resistance against weaponry.</description>
        <iconPath>UI/Icons/Genes/BronzeSkin</iconPath>
        <displayOrderInCategory>240</displayOrderInCategory>
        <skinColorOverride>(43, 30, 14)</skinColorOverride>
        <statOffsets>
            <ArmorRating_Blunt>0.2</ArmorRating_Blunt>
            <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
            <ArmorRating_Heat>0.2</ArmorRating_Heat>
        </statOffsets>
        <statFactors>
            <IncomingDamageFactor>0.9</IncomingDamageFactor>
        </statFactors>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Khorne</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Khorne</li>
                </givenBy>
                <selectionWeight>0.6</selectionWeight>
                <isBeneficial>True</isBeneficial>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Khorne</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Tzeentch</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- Boiling Blood -->
    <GeneDef ParentName="BEWH_BeneficialMutationBase">
        <defName>BEWH_KhorneBoilingBlood</defName>
        <label>mutation: Boiling blood</label>
        <description>The pawns blood has mutated to be constantly boiling, miraculously this does not hurt the pawn, however anyone melee attacking the pawn will be burned from the boiling blood.</description>
        <iconPath>UI/Icons/Genes/BoilingBlood</iconPath>
        <displayOrderInCategory>240</displayOrderInCategory>
        <customEffectDescriptions>
            <li>Spews boiling blod on melee attackers, damaging them.</li>
        </customEffectDescriptions>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Khorne</backgroundPathXenogenes>
            </li>
            <li Class="Mutations40k.DefModExtension_ChaosMutation">
                <givenBy>
                    <li>Khorne</li>
                </givenBy>
                <selectionWeight>0.6</selectionWeight>
                <isBeneficial>True</isBeneficial>
            </li>
            <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                <godOpinion>
                    <li>
                        <god>Khorne</god>
                        <opinion>1</opinion>
                    </li>
                    <li>
                        <god>Tzeentch</god>
                        <opinion>-1</opinion>
                    </li>
                    <li>
                        <god>Slaanesh</god>
                        <opinion>-1</opinion>
                    </li>
                </godOpinion>
            </li>
        </modExtensions>
    </GeneDef>

</Defs>