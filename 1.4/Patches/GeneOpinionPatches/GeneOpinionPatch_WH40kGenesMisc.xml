<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>

            <!--===== DAEMON MUTATION =====-->
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/GeneDef[defName = "BEWH_DaemonMutation"]</xpath>
                <value>
                    <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                        <godOpinion>
                            <li>
                                <god>Undivided</god>
                                <opinion>2</opinion>
                            </li>
                            <li>
                                <god>Khorne</god>
                                <opinion>2</opinion>
                            </li>
                            <li>
                                <god>Tzeentch</god>
                                <opinion>2</opinion>
                            </li>
                            <li>
                                <god>Nurgle</god>
                                <opinion>2</opinion>
                            </li>
                            <li>
                                <god>Slaanesh</god>
                                <opinion>2</opinion>
                            </li>
                        </godOpinion>
                    </li>
                    <li Class="Mutations40k.DefModExtension_ChaosMutation">
                        <givenBy>
                            <li>Undivided</li>
                            <li>Khorne</li>
                            <li>Tzeentch</li>
                            <li>Nurgle</li>
                            <li>Slaanesh</li>
                        </givenBy>
                        <selectionWeight>0.01</selectionWeight>
                        <removesDetrimentalGifts>True</removesDetrimentalGifts>
                        <isBeneficial>True</isBeneficial>
                        <requiredAcceptance>Blessed</requiredAcceptance>
                        <isConsideredMutation>true</isConsideredMutation>
                    </li>
                </value>
            </li>


            <!--===== UNDIVIDED COLOR =====-->
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/GeneDef[defName = "BEWH_UndividedColor"]</xpath>
                <value>
