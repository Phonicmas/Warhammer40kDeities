<?xml version="1.0" encoding="utf-8" ?>
<Patch>

    <Operation Class="PatchOperationSequence">
        <operations>

            <!--===== UNDIVIDED =====-->
            <li Class="PatchOperationAddModExtension">
                <xpath>Defs/GeneDef[defName = "BEWH_UndividedMark"]</xpath>
                <value>
                    <li Class="Core40k.DefModExtension_TraitAndGeneOpinion">
                        <godOpinion>
                            <li>
                                <god>Undivided</god>
                                <opinion>2</opinion>
                            </li>
                        </godOpinion>
                        <makesGodGiveBeneficial>
                            <li>Undivided</li>
                        </makesGodGiveBeneficial>
                    </li>
                    <li Class="Mutations40k.DefModExtension_ChaosMutation">
                        <givenBy>
                            <li>Undivided</li>
                        </givenBy>
                        <selectionWeight>0.1</selectionWeight>
                        <isBeneficial>True</isBeneficial>
                        <requiredAcceptance>Favoured</requiredAcceptance>
                        <isConsideredMutation>true</isConsideredMutation>
                    </li>
                </value>
            </li>
            
