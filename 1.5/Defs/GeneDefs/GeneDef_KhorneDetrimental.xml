<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Monstrous Hands -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_KhorneMonstrousHands</defName>
        <label>mutation: Monstrous hands</label>
        <description>The pawn's hands have mutated into giant monstrous hands. Though a formidable weapon, these hands cannot carry any weapons and are a huge hindrance to work.</description>
        <iconPath>UI/Icons/Genes/MonstrousHands</iconPath>
        <displayOrderInCategory>240</displayOrderInCategory>
        <customEffectDescriptions>
            <li>Gives carriers of this gene giant monstrous hands, which makes it impossible to carry weapons and are a huge hindrance to work.</li>
        </customEffectDescriptions>
        <capMods>
            <li>
                <capacity>Manipulation</capacity>
                <postFactor>0.35</postFactor>
            </li>
        </capMods>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Khorne</backgroundPathXenogenes>
                <hediffsToBodyParts>
                    <li>
                        <hediff>BEWH_KhorneMonstrousHandsAttack</hediff>
                        <bodyparts>
                            <li>Arm</li>
                            <li>Arm</li>
                        </bodyparts>
                    </li>
                </hediffsToBodyParts>
            </li>
            <li Class="Deities40k.DefModExtension_DeityGift">
                <isConsideredMutation>true</isConsideredMutation>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- Khornate Hunger -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_KhornateHunger</defName>
        <label>mutation: Khornate hunger</label>
        <description>The pawn's senses have mutated, giving them a thirst for killing other beings. If not sated, the pawn will go into a berserk rage.</description>
        <iconPath>UI/Icons/Genes/KhornateHunger</iconPath>
        <displayOrderInCategory>240</displayOrderInCategory>
        <causesNeed>BEWH_KhornateHunger</causesNeed>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Khorne</backgroundPathXenogenes>
            </li>
            <li Class="Deities40k.DefModExtension_DeityGift">
                <requiredWorkTags>
                    <li>Violent</li>
                </requiredWorkTags>
                <isConsideredMutation>true</isConsideredMutation>
            </li>
        </modExtensions>
    </GeneDef>
</Defs>