<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- Jealous visage -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_SlaaneshJealousVisage</defName>
        <label>mutation: Jealous visage</label>
        <description>This pawn has been mutated and is instilled with the idea, that they're owed everything and should have whatever they want, however they often find this to not be the case.</description>
        <iconPath>UI/Icons/Genes/JealousVisage</iconPath>
        <displayOrderInCategory>440</displayOrderInCategory>
        <forcedTraits>
            <li>
                <def>Jealous</def>
            </li>
        </forcedTraits>
        <customEffectDescriptions>
            <li>May have several mental breakdowns per day, wondering why they don't have everything they want.</li>
        </customEffectDescriptions>
        <mentalBreakMtbDays>0.2</mentalBreakMtbDays>
        <mentalBreakDef>BEWH_JealousVisageWander</mentalBreakDef>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Slaanesh</backgroundPathXenogenes>
            </li>
            <li Class="Deities40k.DefModExtension_DeityGift">
                <isConsideredMutation>true</isConsideredMutation>
            </li>
        </modExtensions>
    </GeneDef>


    <!-- Deadened Senses -->
    <GeneDef ParentName="BEWH_DetrimentalMutationBase">
        <defName>BEWH_SlaaneshDeadenedSenses</defName>
        <label>mutation: Deadened senses</label>
        <description>The pawn's sense has been mutated to such a degree that their senses are now barely functioning.</description>
        <iconPath>UI/Icons/Genes/DeadenedSenses</iconPath>
        <displayOrderInCategory>440</displayOrderInCategory>
        <capMods>
            <li>
                <capacity>Sight</capacity>
                <postFactor>0.25</postFactor>
            </li>
            <li>
                <capacity>Hearing</capacity>
                <postFactor>0.25</postFactor>
            </li>
            <li>
                <capacity>Talking</capacity>
                <postFactor>0.25</postFactor>
            </li>
        </capMods>
        <modExtensions>
            <li Class="VanillaGenesExpanded.GeneExtension">
                <backgroundPathXenogenes>UI/Icons/Genes/GeneBackground_Slaanesh</backgroundPathXenogenes>
            </li>
            <li Class="Deities40k.DefModExtension_DeityGift">
                <isConsideredMutation>true</isConsideredMutation>
            </li>
        </modExtensions>
    </GeneDef>

</Defs>