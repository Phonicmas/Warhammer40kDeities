<?xml version="1.0" encoding="UTF-8"?>
<Defs>

    <!-- Flaming Arm Attack -->
    <HediffDef>
        <defName>BEWH_TzeentchFlamingArmAttack</defName>
        <label>flaming arm</label>
        <description>The arm is replaced with the flaming arm of a Flamer of Tzeentch, and is able to project fiery blasts and scorch nearby enemies upon contact.</description>
        <hediffClass>HediffWithComps</hediffClass>
        <scenarioCanAdd>false</scenarioCanAdd>
        <everCurableByItem>false</everCurableByItem>
        <maxSeverity>1.0</maxSeverity>
        <isBad>false</isBad>
        <defaultLabelColor>(0.28, 0.32, 0.76)</defaultLabelColor>        <!-- Tzeentch Color -->
        <comps>
            <li Class="HediffCompProperties_VerbGiver">
                <tools>
                    <li>
                        <label>flaming arm</label>
                        <capacities>
                            <li>BEWH_FlamingArmBurn</li>
                        </capacities>
                        <power>8</power>
                        <cooldownTime>1.2</cooldownTime>
                    </li>
                </tools>
            </li>
        </comps>
    </HediffDef>


